@model PowerSystemMonitoring.Web.ViewModels.WeatherStation.WeatherStationInputModel

    <h1>Create weather station</h1>
<form method="post" class="col-md-6 offset-md-3"
      enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Temperature"></label>
            <input asp-for="Temperature" class="form-control" />
            <span asp-validation-for="Temperature" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="IPAddress"></label>
            <input asp-for="IPAddress" class="form-control" />
            <span asp-validation-for="IPAddress" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col">
            <label asp-for="InstalationDescription"></label>
            <textarea asp-for="InstalationDescription" class="form-control"></textarea>
            <span asp-validation-for="InstalationDescription" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-2">
            <label asp-for="IsActive"></label>
        </div>
        <div class="col-md-2">
            <input asp-for="IsActive">
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-2">
            <label asp-for="Image"></label>
        </div>
        <div class="col-md-2">
            <input asp-for="Image" type="file">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
    </div>
    <input type="submit" class="btn btn-primary" />
</form>

