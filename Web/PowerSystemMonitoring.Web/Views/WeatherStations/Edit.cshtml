@model PowerSystemMonitoring.Web.ViewModels.WeatherStation.WeatherStationEditModel

<h1>Edit weather station</h1>
<form method="post" class=""
      enctype="multipart/form-data">
    <div class="row">
        @if (Model.ImageUrl != null)
        {
            <div class="col-12 col-md-2">
                <img class="img-fluid w-100" src=@Model.ImageUrl alt="@Model.Name" />
            </div>
        }
        else
        {
            <div>
                <img src="~/images/common/No_Image.jpg" />
            </div>
        }
        <div class="col d-flex flex-column flex-sm-row justify-content-between mb-3">
            <div class="text-center text-sm-left col-md-6">
                <h4 class="pt-sm-2 pb-1 mb-0 text-nowrap">@Model.Name</h4>
                <p class="mb-0"></p>
                <br />
                <h6 class="pt-sm-2 pb-1 mb-0 text-nowrap">Change photo</h6>

                <div>
                    <input asp-for="ImageFile" type="file">
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>


            </div>
            <div class="text-center text-sm-right">
                <label>Created on</label>
                <div class="text-muted"><small>@Model.CreatedOn</small></div>
            </div>
        </div>
    </div>


    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Temperature"></label>
            <input asp-for="Temperature" class="form-control" />
            <span asp-validation-for="Temperature" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="IPAddress"></label>
            <input asp-for="IPAddress" class="form-control" />
            <span asp-validation-for="IPAddress" class="text-danger"></span>
        </div>
    </div>



    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="InstalationDescription"></label>
            <textarea asp-for="InstalationDescription" class="form-control"></textarea>
            <span asp-validation-for="InstalationDescription" class="text-danger"></span>
        </div>


        <div class="col-md-6">
            <br />
            <div class="form-row">
                <div class="col-md-2">
                    <label asp-for="IsActive"></label>
                </div>
                <div class="col-md-2">
                    <input asp-for="IsActive">
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-2">
                    <label asp-for="ImageFile"></label>
                </div>
                <div class="col-md-2">
                    <input asp-for="ImageFile" type="file">
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>
        </div>

    </div>

    <input type="submit" class="btn btn-primary" value="Save changes" />
</form>

