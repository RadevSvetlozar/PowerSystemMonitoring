@model PowerSystemMonitoring.Web.ViewModels.Condutor.ConductorEditModel

<h1>Edit Conductor</h1>
<form method="post" class=""
      enctype="multipart/form-data">
    <div class="row">
        @if (Model.ImageUrl != null)
        {
            <div class="col-12 col-md-2">
                <img class="img-fluid w-100" src=@Model.ImageUrl alt="@Model.Name" />
            </div>
        }
        else
        {
            <div>
                <img src="~/images/common/No_Image.jpg" />
            </div>
        }
        <div class="col d-flex flex-column flex-sm-row justify-content-between mb-3">
            <div class="text-center text-sm-left col-md-6">
                <h4 class="pt-sm-2 pb-1 mb-0 text-nowrap">@Model.Name</h4>
                <p class="mb-0"></p>
                <br />
                <h6 class="pt-sm-2 pb-1 mb-0 text-nowrap">Change photo</h6>

                <div>
                    <input asp-for="ImageFile" type="file">
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>


            </div>
            <div class="text-center text-sm-right">
                <label>Created on</label>
                <div class="text-muted"><small>@Model.CreatedOn</small></div>
            </div>
        </div>
    </div>


    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="OuterDiameter"></label>
            <input asp-for="OuterDiameter" class="form-control" />
            <span asp-validation-for="OuterDiameter" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="InnerDiameter"></label>
            <input asp-for="InnerDiameter" class="form-control" />
            <span asp-validation-for="InnerDiameter" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Weight"></label>
            <input asp-for="Weight" class="form-control" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="RTCoefficient"></label>
            <input asp-for="RTCoefficient" class="form-control" />
            <span asp-validation-for="RTCoefficient" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="CoefficientOfThermalExpansion"></label>
            <input asp-for="CoefficientOfThermalExpansion" class="form-control" />
            <span asp-validation-for="CoefficientOfThermalExpansion" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="MaxTemperature"></label>
            <input asp-for="MaxTemperature" class="form-control" />
            <span asp-validation-for="MaxTemperature" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Elasticity"></label>
            <input asp-for="Elasticity" class="form-control" />
            <span asp-validation-for="Elasticity" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Section"></label>
            <input asp-for="Section" class="form-control" />
            <span asp-validation-for="Section" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="MaxCurrent"></label>
            <input asp-for="MaxCurrent" class="form-control" />
            <span asp-validation-for="MaxCurrent" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="ConductorPerPhase"></label>
            <input asp-for="ConductorPerPhase" class="form-control" />
            <span asp-validation-for="ConductorPerPhase" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Current"></label>
            <input asp-for="Current" class="form-control">
            <span asp-validation-for="Current" class="text-danger"></span>
        </div>
    </div>
    <input type="submit" class="btn btn-primary" value="Save changes" />
</form>

