@model IEnumerable<PowerSystemMonitoring.Web.ViewModels.CurrentSensor.CurrentSensorViewModel>
@using PowerSystemMonitoring.Common

<table class="table">
    <thead>
        <tr>

            <th scope="col">IsActive</th>
            <th scope="col">Name</th>
            <th scope="col">Model</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sensor in Model)
        {
            <tr>
                <td>
                    @if (sensor.IsActive)
                    {
                        <i class="fas fa-check-circle"></i>
                    }
                    else
                    {
                        <i class="far fa-circle"></i>
                    }
                </td>
                <td>@sensor.Name</td>
                <td>@sensor.Model</td>
                <td>  <a type="button" class="btn btn-success" asp-controller="CurrentSensors" asp-action="GetById" asp-route-id="@sensor.Id">Details</a></td>
            </tr>
        }
    </tbody>
</table>