@model IEnumerable<PowerSystemMonitoring.Web.ViewModels.PoweLine.PowerLineViewModel>
@using PowerSystemMonitoring.Common

    <div>
        <h1>All power lines</h1>
        @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
        {
            <a type="button" class="btn btn-success" asp-controller="PowerLines" asp-action="Create">Create power line</a>
        }
        </div>
<br />
<table class="table">
    <thead>
        <tr>

            <th scope="col">Name</th>
            <th scope="col">Length</th>
            <th scope="col">Voltage</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var powerLine in Model)
        {
            <tr>
                <td>@powerLine.Name</td>
                <td>@powerLine.Length km</td>
                <td>@powerLine.Voltage kV</td>

                <td><a type="button" class="btn btn-success" asp-action="GetById" asp-route-id="@powerLine.Id">Details</a></td>
                @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
                {
                    <td><a type="button" class="btn btn-success" asp-action="Edit" asp-route-id="@powerLine.Id">Edit</a></td>
                    <td><a type="button" class="btn btn-success" asp-action="Delete" asp-route-id="@powerLine.Id">Delete</a></td>
                }
            </tr>
        }
    </tbody>
</table>
